@using FashionShop.Models.DTO.ProductDTO;

@model GetProductByIdDTO
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="full-banner" style="height: 135px">
</div>

<div class="container">
    <ul class="breadcrumb">
        <li><a href="~/Home"><i class="fa fa-home"></i></a></li>
        <li><a href="single-product.html">Chi tiết sản phẩm</a></li>
    </ul>
        <div class="row">
            <div class="col-sm-12" id="content">
                <div class="row">
                    <div class="col-sm-7">
                        <ul class="thumbnails main-front-image">
                            <li class="product_img">
                                <a class="thumbnail">
                                    <img src="~/@Model.Image" class="changeimg">
                                </a>
                            </li>
                        @foreach (var img in @ViewBag.listImg)
                        {
                            <li class="image-additional">
                                <a class="thumbnail">
                                    <img class="galleryimg" src="~/@img" width="93" height="133">
                                </a>
                            </li>

                        }



                        </ul>
                    </div>
                    <div class="col-sm-5 col-xs-12 product-desc">
                        @*<div class="rating-section product-rating-status">
                    <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-1x"></i></span>
                    <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-1x"></i></span>
                    <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-1x"></i></span>
                    <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-1x"></i></span>
                    <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-1x"></i></span>
                    <a class="review-link review-link-show">0 reviews</a>
                    <a class="review-link review-link-show">Write a review</a>
                    </div>*@

                    @if (@Model.Discount >0)
                    {
                        <h1>@Model.Name</h1>

                        <div class="price-section">

                            <span class="price-p" style="text-decoration: line-through; font-size: 20px; margin-right: 10px; color: #929292;">
                                @Model.Price
                            </span>

                            <span class="price-p" style="font-size: 25px">
                            @Html.Raw(Model.Price - (Model.Price * Model.Discount/100))
                            </span>

                            <span class="price-left">@Model.Discount %</span>

                        </div>
                        <ul class="list-unstyled product-section" style="font-size: 25px">
                            <li><span>Số lượng có sẵn:</span> @Model.Quantity</li>
                        </ul>
                    }
                    else
                    {
                    <h1>@Model.Name</h1>

                    <div class="price-section">

                        <span class="price-p" style="font-size: 25px">
                            @Model.Price
                        </span>
                    </div>
                    <ul class="list-unstyled product-section" style="font-size: 25px">
                        <li><span>Số lượng có sẵn:</span> @Model.Quantity</li>
                    </ul>
                    }

                        <div id="product">
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-sm-3">
                                        <label for="input-quantity" class="control-label">Số lượng</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control" id="input-quantity" size="2" value="1" min="1" name="quantity">
                                    </div>
                                    <input type="hidden" value="49" name="product_id">
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-3 margin-top product-button">
                                        <button class="" type="button"><i class="fa fa-heart"></i></button>
                                    </div>
                                    <div class="col-sm-9">
                                        <a class="margin-top btn btn-primary btn-lg btn-block btn-5 btn-5a icon-cart" id="button-cart" href="cart.html"><span>Thêm vào giỏ hàng</span></a>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix margin-top"></div>

                        </div>
                    </div>
                </div>
                <div class="product-tab-part">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#tab-description">Mô tả</a></li>
                        <li><a data-toggle="tab" href="#tab-review">Bình luận (0)</a></li>
                    </ul>
                    <div class="tab-content">
                        <div id="tab-description" class="tab-pane active">
                                @Model.Describe
                        </div>
                        <div id="tab-review" class="tab-pane">
                            <form id="form-review" class="form-horizontal">
                                <div id="review">
                                    <p>There are no reviews for this product.</p>
                                </div>
                                <h2>Write a review</h2>
                                <div class="form-group required">
                                    <div class="col-sm-12">
                                        <label for="input-name" class="control-label">Your Name</label>
                                        <input type="text" class="form-control" id="input-name" value="" name="name">
                                    </div>
                                </div>
                                <div class="form-group required">
                                    <div class="col-sm-12">
                                        <label for="input-review" class="control-label">Your Review</label>
                                        <textarea class="form-control" id="input-review" rows="5" name="text"></textarea>
                                        <div class="help-block"><span class="text-danger">Note:</span> HTML is not translated!</div>
                                    </div>
                                </div>
                                <div class="form-group required">
                                    <div class="col-sm-12">
                                        <label class="control-label">Rating</label>
                                        &nbsp;&nbsp;&nbsp; Bad&nbsp;
                                        <input type="radio" value="1" name="rating">
                                        &nbsp;
                                        <input type="radio" value="2" name="rating">
                                        &nbsp;
                                        <input type="radio" value="3" name="rating">
                                        &nbsp;
                                        <input type="radio" value="4" name="rating">
                                        &nbsp;
                                        <input type="radio" value="5" name="rating">
                                        &nbsp;Good
                                    </div>
                                </div>
                                <div class="buttons clearfix">
                                    <div class="pull-right">
                                        <button class="btn btn-primary" data-loading-text="Loading..." id="button-review" type="button">Continue</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    <div class="row featured-block">
        <div class="main-head-block">
            <h3>Danh sách sản phẩm tương tự</h3>
        </div>
        @foreach (var item in @ViewBag.SanPham)
                             {
        <div class="col-md-2 col-sm-6 col-xs-6 mb-30 width-100">
            
            <div class="product-thumb transition">
                <div class="product-view-block">
                    <div class="button-block">
                        @*<a> <i class="fa fa-heart"></i></a>*@
                        @*<a><i class="fa fa-random" aria-hidden="true"></i></a>*@
                        <a href="#"><i class="fa fa-shopping-cart"></i></a>
                    </div>
                    <div class="price-view-block">
                        <span class="price-left">10%</span>
                    </div>

                    <div class="image-block">
                        <a href="single-product.html" style="cursor: pointer">
                                <img class="img-responsive" alt="i" src="~/@item.Image">
                        </a>
                    </div>
                        <div style="margin: 0px 5px;text-align: center;">
                             
                                <p class="m-0">
                                    @item.Name
                                </p>
                                <span>
                                @Html.Raw(@item.Price - (@item.Price * @item.Discount/100))
                                </span>

                                <span style="text-decoration: line-through; font-size: 80%">
                                @item.Price
                                </span>                         
                        </div>
                    <div class="effect-shadow">
                        <a href="~/Product/Detail" style="display: block; width: 100%; height: 100%;"></a>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>

</div>

@section script{
    <script>
        $("document").ready(function () {

            $(".galleryimg").on("click", function () {
                var src = $(this).attr('src');
                $(".changeimg").attr('src', src);
            });
        });
    </script>

    <script src="~/assets/customer/js/shoppingcart.js"></script>
}

